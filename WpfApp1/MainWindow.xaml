<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfApp1"
        Title="ورود" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFD1B0">

    <Grid>


        <!-- قاب اصلی لاگین -->
        <Border Width="400" Height="500"
                HorizontalAlignment="Left" Margin="80,0,0,0"
                VerticalAlignment="Center"
                Background="#CCFFFFFF"
                CornerRadius="25"
                BorderBrush="#40FFFFFF">

            <!-- محتوای فرم لاگین -->
            <StackPanel Margin="30" VerticalAlignment="Center" >

                <!-- عنوان -->
                <TextBlock Text="ورود"
                           FontSize="30"
                           FontWeight="Bold"
                           Foreground="#333"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- فیلد نام کاربری -->
                <TextBox Height="40"
                         Margin="0,10"
                         FontSize="14"
                         Padding="10"
                         Background="#FFFFFF"
                         BorderThickness="0"
                         Name="UserName">
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Border Background="{TemplateBinding Background}"
                              CornerRadius="10"
                              BorderBrush="{TemplateBinding BorderBrush}"
                              BorderThickness="{TemplateBinding BorderThickness}">
                              <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                        </ControlTemplate>
                    </TextBox.Template>
                </TextBox>

                    <!-- فیلد پسورد -->
             <PasswordBox Height="40"
             Margin="0,10"
             FontSize="14"
             BorderThickness="0"
             Padding="10"
             Background="#FFFFFF"
             Name="Password">
                    <PasswordBox.Template>
                        <ControlTemplate TargetType="PasswordBox">
                            <Border Background="{TemplateBinding Background}"
                    CornerRadius="10"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                        </ControlTemplate>
                    </PasswordBox.Template>
                </PasswordBox>


                <!-- دکمه ورود -->
        <Button Height="42"
        Margin="0,20,0,10"
        FontSize="14"
        FontWeight="SemiBold"
        Cursor="Hand"
        BorderThickness="0"
        Click="BtnLogin">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="btnBorder"
                    Background="{TemplateBinding Background}"
                    CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Margin="10,0"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="btnBorder" Property="Background" Value="#FF6A36"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Background>
                        <SolidColorBrush Color="#F25019"/>
                    </Button.Background>
                    <Button.Content>
                        <TextBlock Text="ورود" Foreground="White" FontSize="18" FontWeight="SemiBold"/>
                    </Button.Content>
                </Button>


                <!-- فراموشی رمز -->
                <TextBlock Text="رمز عبور را فراموش کرده‌اید؟"
                           FontSize="12"
                           HorizontalAlignment="Right"
                           Foreground="Gray"
                           Cursor="Hand"
                           Margin="0,0,0,10"/>
            </StackPanel>
        </Border>
        <Image Source="/icon/icon1.png"
               Width="550" Height="550"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Margin="450,0,0,0"/>

    </Grid>
</Window>

