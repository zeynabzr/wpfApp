<UserControl x:Class="WpfApp1.TaskForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Border Background="#FFF4EC" CornerRadius="10" Padding="20" Margin="20">
        <StackPanel>
            <TextBlock Text="اضافه کردن وظیفه جدید" FontSize="20" FontWeight="Bold" Margin="0 0 0 20" TextAlignment="Right"/>

            <TextBox x:Name="TitleTextBox" Margin="0 0 0 10" TextAlignment="Right"/>

            <DatePicker  x:Name="TaskDatePicker" Margin="0 0 0 10" FlowDirection="RightToLeft" />

            <TextBox x:Name="DescriptionTextBox" AcceptsReturn="True" Height="100" TextWrapping="Wrap" Margin="0 0 0 10" Text="توضیحات" TextAlignment="Right"/>

            <Button Content="بارگذاری تصور" Margin="0 0 0 10" Click="UploadImage_Click"/>
            <Button Content="ذخیره" Background="#F25019" Foreground="White" Click="DoneBtnClick"/>
        </StackPanel>
    </Border>
</UserControl>
